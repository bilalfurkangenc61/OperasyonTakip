@model BtOperasyonTakip.Models.Hata
@{
    ViewData["Title"] = "Saha - Yeni Hata";
}
<div class="container mt-4">
    <h2>Yeni Hata</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Hata Adı</label>
            <input asp-for="HataAdi" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea asp-for="HataAciklama" class="form-control" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select asp-for="KategoriBilgisi" class="form-select">
                <option>Yazılım</option>
                <option>Donanım</option>
                <option>Ağ</option>
                <option>Veritabanı</option>
                <option>Diğer</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Bildiren</label>
            <input asp-for="OlusturanKullaniciAdi" class="form-control" />
        </div>
        <input type="hidden" asp-for="Durum" value="Beklemede" />
        <button class="btn btn-success">Kaydet</button>
        <a href="/Hatalar/SahaIndex" class="btn btn-outline-secondary">İptal</a>
    </form>
</div>