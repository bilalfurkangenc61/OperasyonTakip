@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ticketlar";
    var antiForgeryToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}

@model List<BtOperasyonTakip.Models.Ticket>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">🧾 Ticketlar</h2>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Saha") || User.IsInRole("KurumsalSaha"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Yeni Ticket
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-9">
                    <input type="text" name="searchFirma" class="form-control"
                           placeholder="🔍 Firma adı, yazılımcı adı ile ara..."
                           value="@ViewBag.SearchFirma" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Ara
                    </button>
                    @if (!string.IsNullOrWhiteSpace(ViewBag.SearchFirma))
                    {
                        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">
                            <i class="bi bi-arrow-counterclockwise"></i> Temizle
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Henüz ticket bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Firma</th>
                        <th>Müşteri Web Sitesi</th>
                        <th>Yazılımcı</th>
                        <th>Atanan Operasyon</th>
                        <th>📧 Mail</th>
                        <th>İrtibat</th>
                        <th>Teknoloji</th>
                        <th>Durum</th>
                        <th>Uyum Kararı Veren</th>
                        <th>Oluşturan</th>
                        <th>Tarih</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        var status = ticket.Durum?.Trim() ?? "";
                        var statusBadgeClass =
                        status.Contains("Onay Bekleniyor", StringComparison.OrdinalIgnoreCase) ? "bg-warning text-dark"
                        : status.Contains("Kaydedildi", StringComparison.OrdinalIgnoreCase) ? "bg-success"
                        : status.Contains("Reddedildi", StringComparison.OrdinalIgnoreCase) ? "bg-danger"
                        : "bg-secondary";

                        var isOp1 = string.Equals(status, "Operasyon 1 Onay Bekleniyor", StringComparison.OrdinalIgnoreCase);
                        var isOp2 = string.Equals(status, "Operasyon 2 Onay Bekleniyor", StringComparison.OrdinalIgnoreCase);
                        var isEntegrasyonBekliyor = string.Equals(status, "Entegrasyon Bekleniyor", StringComparison.OrdinalIgnoreCase);
                        var isSahaCanli = string.Equals(status, "Saha Canli Bekleniyor", StringComparison.OrdinalIgnoreCase);

                        var uyumKararVeren = string.IsNullOrWhiteSpace(ticket.UyumOnaylayanKullaniciAdi)
                        ? "-"
                        : ticket.UyumOnaylayanKullaniciAdi;

                        <tr>
                            <td><strong>@ticket.Id</strong></td>
                            <td>@ticket.FirmaAdi</td>

                            <td>
                                <a href="@ticket.MusteriWebSitesi" target="_blank" class="text-decoration-none">
                                    @(ticket.MusteriWebSitesi.Length > 30 ? ticket.MusteriWebSitesi.Substring(0, 30) + "..." : ticket.MusteriWebSitesi)
                                </a>
                            </td>

                            <td>@ticket.YazilimciAdi @ticket.YazilimciSoyadi</td>

                            <td>
                                @if (!string.IsNullOrWhiteSpace(ticket.AtananOperasyonKullaniciAdi))
                                {
                                    <span class="badge bg-primary">@ticket.AtananOperasyonKullaniciAdi</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>

                            <td>
                                <a href="mailto:@ticket.Mail" class="text-decoration-none">
                                    <i class="bi bi-envelope"></i> @(ticket.Mail.Length > 25 ? ticket.Mail.Substring(0, 25) + "..." : ticket.Mail)
                                </a>
                            </td>

                            <td>@ticket.IrtibatNumarasi</td>

                            <td>
                                @if (!string.IsNullOrWhiteSpace(ticket.TeknolojiBilgisi))
                                {
                                    <span class="badge bg-info">@ticket.TeknolojiBilgisi</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">Seçilmedi</span>
                                }
                            </td>

                            <td><span class="badge @statusBadgeClass">@ticket.Durum</span></td>

                            <td>
                                @if (string.Equals(status, "Reddedildi", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-danger">@uyumKararVeren</span>
                                }
                                else if (!string.Equals(ticket.Durum, "Uyum Onayı Bekleniyor", StringComparison.OrdinalIgnoreCase)
                                && !string.IsNullOrWhiteSpace(ticket.UyumOnaylayanKullaniciAdi))
                                {
                                    <span class="badge bg-success">@uyumKararVeren</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>

                            <td>@ticket.OlusturanKullaniciAdi</td>
                            <td>@ticket.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>

                            <td style="min-width: 170px;">
                                <button type="button" class="btn btn-sm btn-info view-detail-btn"
                                        data-ticket-id="@ticket.Id"
                                        data-bs-toggle="modal"
                                        data-bs-target="#detailModal"
                                        data-status="@ticket.Durum"
                                        data-olusturan="@ticket.OlusturanKullaniciAdi"
                                        data-olusturma-tarih="@ticket.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")"
                                        data-op1-entegre="@((ticket.EntegreOlabilirMi.HasValue) ? (ticket.EntegreOlabilirMi.Value ? "Evet" : "Hayır") : "")"
                                        data-op1-tarih="@(ticket.Operasyon1OnayTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "")"
                                        data-op1-not="@ticket.EntegrasyonNotu"
                                        data-op1-karar-veren="@ticket.OnaylayanKullaniciAdi"
                                        data-uyum-onaylayan="@ticket.UyumOnaylayanKullaniciAdi"
                                        data-uyum-tarih="@(ticket.UyumOnayTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "")"
                                        data-uyum-aciklama="@ticket.UyumKararAciklamasi"
                                        data-op2-mail="@((ticket.MailGonderildiMi.HasValue) ? (ticket.MailGonderildiMi.Value ? "Evet" : "Hayır") : "")"
                                        data-op2-tarih="@(ticket.Operasyon2OnayTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "")"
                                        data-op2-not="@ticket.MailNotu"
                                        data-saha-tarih="@(ticket.CanliAcildiTarihi?.ToString("dd.MM.yyyy HH:mm") ?? "")"
                                        data-saha-not="@ticket.CanliNotu">
                                    <i class="bi bi-eye"></i>
                                </button>

                                @if (User.IsInRole("Operasyon") && isOp1)
                                {
                                    <button type="button" class="btn btn-sm btn-success op1-yes-btn" data-id="@ticket.Id" title="Entegre olabiliyoruz">
                                        <i class="bi bi-check-circle"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger op1-no-btn" data-id="@ticket.Id" title="Entegre olamıyoruz">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                }

                                @if (User.IsInRole("Operasyon") && isOp2)
                                {
                                    <button type="button" class="btn btn-sm btn-success op2-mail-yes-btn" data-id="@ticket.Id" title="Mail gönderdim: Evet">
                                        <i class="bi bi-envelope-check"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary op2-mail-no-btn" data-id="@ticket.Id" title="Mail gönderdim: Hayır">
                                        <i class="bi bi-envelope-x"></i>
                                    </button>
                                }

                                @if (User.IsInRole("Operasyon") && isEntegrasyonBekliyor)
                                {
                                    <button type="button" class="btn btn-sm btn-primary entegrasyon-tamam-btn" data-id="@ticket.Id" title="Entegrasyon Tamamlandı">
                                        <i class="bi bi-check2-all"></i>
                                    </button>
                                }

                                @if ((User.IsInRole("Saha") || User.IsInRole("KurumsalSaha")) && isSahaCanli)
                                {
                                    <button type="button" class="btn btn-sm btn-primary saha-canli-btn" data-id="@ticket.Id" title="Canlı ortamı açtım">
                                        <i class="bi bi-broadcast"></i>
                                    </button>

                                    <button type="button" class="btn btn-sm btn-danger saha-red-btn" data-id="@ticket.Id" title="Canlı aşamasında reddet">
                                        <i class="bi bi-x-octagon"></i>
                                    </button>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <button type="button"
                                            class="btn btn-sm btn-warning change-assign-open-btn"
                                            data-ticket-id="@ticket.Id"
                                            data-current-assignee="@(ticket.AtananOperasyonKullaniciAdi ?? "")"
                                            title="Atanan Operasyon'u değiştir">
                                        <i class="bi bi-person-gear"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Detail Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">📋 Ticket Detayı #<span id="modalTicketId"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div><strong>Durum:</strong> <span id="modalStatus"></span></div>
                    <div><strong>Oluşturan:</strong> <span id="modalOlusturan"></span></div>
                    <div><strong>Oluşturma Tarihi:</strong> <span id="modalOlusturmaTarih"></span></div>
                </div>

                <hr />

                <div class="row g-3">
                    <div class="col-12">
                        <label class="fw-bold">1) Operasyon 1:</label>
                        <div class="bg-light p-2 rounded">
                            <div><strong>Karar:</strong> <span id="modalOp1Karar"></span></div>
                            <div><strong>Karar Veren:</strong> <span id="modalOp1KararVeren"></span></div>
                            <div><strong>Tarih:</strong> <span id="modalOp1Tarih"></span></div>
                            <div><strong>Not:</strong> <span id="modalOp1Not"></span></div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="fw-bold">2) Uyum:</label>
                        <div class="bg-light p-2 rounded">
                            <div><strong>Karar Veren:</strong> <span id="modalUyumOnaylayan"></span></div>
                            <div><strong>Tarih:</strong> <span id="modalUyumTarih"></span></div>
                            <div><strong>Açıklama:</strong> <span id="modalUyumAciklama"></span></div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="fw-bold">3) Operasyon 2:</label>
                        <div class="bg-light p-2 rounded">
                            <div><strong>Mail Gönderildi Mi:</strong> <span id="modalOp2Mail"></span></div>
                            <div><strong>Tarih:</strong> <span id="modalOp2Tarih"></span></div>
                            <div><strong>Not:</strong> <span id="modalOp2Not"></span></div>
                        </div>
                    </div>

                    <div class="col-12">
                        <label class="fw-bold">4) Saha:</label>
                        <div class="bg-light p-2 rounded">
                            <div><strong>Canlı Açıldı Tarihi:</strong> <span id="modalSahaTarih"></span></div>
                            <div><strong>Not:</strong> <span id="modalSahaNot"></span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="changeAssignModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Atama Değiştir</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="changeAssignTicketId" />

                    <div class="mb-2 text-muted">
                        <small>Mevcut atanan: <span id="changeAssignCurrentAssignee">-</span></small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Yeni Operasyon</label>
                        <select class="form-select" id="changeAssignUserId" required>
                            <option value="">Seçiniz...</option>
                            @foreach (var u in (IEnumerable<dynamic>)(ViewBag.OperasyonUsers ?? new List<dynamic>()))
                            {
                                <option value="@u.Id">@u.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Değişiklik Nedeni (zorunlu)</label>
                        <textarea class="form-control" id="changeAssignReason" rows="3" maxlength="500" required></textarea>
                        <div class="form-text">Maksimum 500 karakter.</div>
                    </div>

                    <div class="alert alert-danger d-none" id="changeAssignError"></div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-primary" id="changeAssignSaveBtn">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        const __requestVerificationToken = "@antiForgeryToken";

        $(document).on("click", ".view-detail-btn", function () {
            const $btn = $(this);

            const ticketId = $btn.data("ticket-id") || "";
            $("#modalTicketId").text(ticketId);

            $("#modalStatus").text($btn.data("status") || "-");
            $("#modalOlusturan").text($btn.data("olusturan") || "-");
            $("#modalOlusturmaTarih").text($btn.data("olusturma-tarih") || "-");

            $("#modalOp1Karar").text($btn.data("op1-entegre") || "-");
            $("#modalOp1KararVeren").text($btn.data("op1-karar-veren") || "-");
            $("#modalOp1Tarih").text($btn.data("op1-tarih") || "-");
            $("#modalOp1Not").text($btn.data("op1-not") || "-");

            $("#modalUyumOnaylayan").text($btn.data("uyum-onaylayan") || "-");
            $("#modalUyumTarih").text($btn.data("uyum-tarih") || "-");
            $("#modalUyumAciklama").text($btn.data("uyum-aciklama") || "-");

            $("#modalOp2Mail").text($btn.data("op2-mail") || "-");
            $("#modalOp2Tarih").text($btn.data("op2-tarih") || "-");
            $("#modalOp2Not").text($btn.data("op2-not") || "-");

            $("#modalSahaTarih").text($btn.data("saha-tarih") || "-");
            $("#modalSahaNot").text($btn.data("saha-not") || "-");
        });

        async function postJson(url, payload) {
            const res = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": __requestVerificationToken
                },
                body: JSON.stringify(payload)
            });

            let data = null;
            try { data = await res.json(); } catch { }
            if (!res.ok) throw new Error(data?.message || ("HTTP " + res.status));
            return data;
        }

        $(document).on("click", ".op1-yes-btn", async function () {
            const id = Number($(this).data("id"));
            const not = (prompt("Operasyon 1 not (opsiyonel):", "") || "").trim();

            try {
                const data = await postJson("@Url.Action("Operasyon1Decide", "Ticket")", { id, entegreOlabilirMi: true, not });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        $(document).on("click", ".op1-no-btn", async function () {
            const id = Number($(this).data("id"));
            const not = (prompt("Entegre olamıyoruz açıklaması:", "") || "").trim();

            try {
                const data = await postJson("@Url.Action("Operasyon1Decide", "Ticket")", { id, entegreOlabilirMi: false, not });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        $(document).on("click", ".op2-mail-yes-btn", async function () {
            const id = Number($(this).data("id"));
            const not = (prompt("Operasyon 2 not (opsiyonel):", "") || "").trim();

            try {
                const data = await postJson("@Url.Action("Operasyon2Decide", "Ticket")", { id, mailGonderildiMi: true, not });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        $(document).on("click", ".op2-mail-no-btn", async function () {
            const id = Number($(this).data("id"));
            const not = (prompt("Mail gönderilmedi notu (opsiyonel):", "") || "").trim();

            try {
                const data = await postJson("@Url.Action("Operasyon2Decide", "Ticket")", { id, mailGonderildiMi: false, not });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        $(document).on("click", ".entegrasyon-tamam-btn", async function () {
            const id = Number($(this).data("id"));
            const ok = confirm("Entegrasyon tamamlandı olarak işaretlemek istiyor musunuz?");
            if (!ok) return;

            try {
                const data = await postJson("@Url.Action("EntegrasyonTamamlandi", "Ticket")", { id });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        $(document).on("click", ".saha-canli-btn", async function () {
            const id = Number($(this).data("id"));
            const not = (prompt("Canlı açılış notu (opsiyonel):", "") || "").trim();

            try {
                const data = await postJson("@Url.Action("SahaCanliAcildi", "Ticket")", { id, not });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        $(document).on("click", ".saha-red-btn", async function () {
            const id = Number($(this).data("id"));
            const not = (prompt("Reddetme açıklaması (zorunlu):", "") || "").trim();
            if (!not) { alert("Açıklama zorunlu."); return; }

            try {
                const data = await postJson("@Url.Action("SahaReddet", "Ticket")", { id, not });
                alert(data?.message || "İşlem tamamlandı.");
                if (data?.success) location.reload();
            } catch (e) {
                alert("Hata: " + (e?.message || e));
            }
        });

        // Admin atama değiştirme UI (sadece Admin modal render edildiğinde çalışır)
        (function () {
            const modalEl = document.getElementById("changeAssignModal");
            if (!modalEl) return;

            const bsModal = new bootstrap.Modal(modalEl);

            const $ticketId = $("#changeAssignTicketId");
            const $currentAssignee = $("#changeAssignCurrentAssignee");
            const $userId = $("#changeAssignUserId");
            const $reason = $("#changeAssignReason");
            const $error = $("#changeAssignError");

            function showError(msg) {
                $error.text(msg || "Hata").removeClass("d-none");
            }

            function clearError() {
                $error.addClass("d-none").text("");
            }

            $(document).on("click", ".change-assign-open-btn", function () {
                clearError();

                const ticketId = Number($(this).data("ticket-id"));
                const currentAssignee = ($(this).data("current-assignee") || "").toString();

                $ticketId.val(ticketId);
                $currentAssignee.text(currentAssignee || "-");

                $userId.val("");
                $reason.val("");

                bsModal.show();
            });

            $("#changeAssignSaveBtn").on("click", async function () {
                clearError();

                const ticketId = Number($ticketId.val());
                const yeniOperasyonUserId = Number($userId.val());
                const neden = ($reason.val() || "").toString().trim();

                if (!ticketId || ticketId <= 0) { showError("Geçersiz Ticket ID."); return; }
                if (!yeniOperasyonUserId || yeniOperasyonUserId <= 0) { showError("Yeni operasyon seçiniz."); return; }
                if (!neden) { showError("Değişiklik nedeni zorunlu."); return; }

                try {
                    const data = await postJson("@Url.Action("ChangeAssignment", "Ticket")", {
                        ticketId,
                        yeniOperasyonUserId,
                        neden
                    });

                    if (!data?.success) {
                        showError(data?.message || "İşlem başarısız.");
                        return;
                    }

                    bsModal.hide();
                    location.reload();
                } catch (e) {
                    showError("Hata: " + (e?.message || e));
                }
            });
        })();
    </script>
}