@model List<BtOperasyonTakip.Models.Ticket>

@{
    var durumFilter = (ViewBag.DurumFilter as string) ?? "Bekleyen";
    var searchWebsite = (ViewBag.SearchWebsite as string) ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="page-title mb-0">Uyum</h4>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card p-3 mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Durum</label>
            <select class="form-select" name="durumFilter">
                <option value="Tümü" selected="@(durumFilter == "Tümü")">Tümü</option>
                <option value="Bekleyen" selected="@(durumFilter == "Bekleyen")">Bekleyen</option>
                <option value="Onaylanan" selected="@(durumFilter == "Onaylanan")">Onaylanan</option>
                <option value="Reddedilen" selected="@(durumFilter == "Reddedilen")">Reddedilen</option>
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label">Website ile ara</label>
            <input class="form-control" name="searchWebsite" value="@searchWebsite" placeholder="örn: musteri.com" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button class="btn btn-primary w-100" type="submit">Ara</button>
            <a class="btn btn-secondary w-100" asp-action="Index">Temizle</a>
        </div>
    </form>
</div>

<div class="card p-3">
    <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Firma</th>
                    <th>Website</th>
                    <th>Talep Sahibi</th>
                    <th>Durum</th>
                    <th>Uyum Tarihi</th>
                    <th>Uyum Açıklama</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="8" class="text-center text-muted">Kayıt yok.</td></tr>
                }
                else
                {
                    @foreach (var t in Model)
                    {
                        var isBekleyen = (t.Durum?.Trim() ?? "") == "Uyum Onayı Bekleniyor";

                        <tr>
                            <td>@t.Id</td>
                            <td>@t.FirmaAdi</td>
                            <td>@t.MusteriWebSitesi</td>
                            <td>@t.OlusturanKullaniciAdi</td>
                            <td>@t.Durum</td>
                            <td>@(t.UyumOnayTarihi?.ToLocalTime().ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                            <td>@(string.IsNullOrWhiteSpace(t.UyumKararAciklamasi) ? "-" : t.UyumKararAciklamasi)</td>

                            <td class="text-end" style="min-width: 360px;">
                                @if (isBekleyen)
                                {
                                    <form asp-action="Decide" method="post" class="d-flex gap-2 justify-content-end">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@t.Id" />

                                        <select name="karar" class="form-select form-select-sm" style="max-width: 140px;">
                                            <option value="Onay" selected>Onay</option>
                                            <option value="Red">Red</option>
                                        </select>

                                        <input name="aciklama"
                                               class="form-control form-control-sm"
                                               maxlength="500"
                                               placeholder="Açıklama (opsiyonel)"
                                               style="max-width: 280px;" />

                                        <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>