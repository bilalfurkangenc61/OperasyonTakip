@model IEnumerable<BtOperasyonTakip.Models.ToplantiNotu>
@{
    ViewData["Title"] = "Toplantı Notları";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">🗒️ Müşteri Toplantı Notları</h2>

    <form method="get" class="row g-3 border p-3 rounded bg-white shadow-sm mb-3">
        <div class="col-md-10">
            <label class="form-label">Ara (Müşteri / Ekleyen / Not)</label>
            <input name="q" value="@ViewBag.Q" class="form-control" placeholder="Örn: ABC, Furkan, toplantı..." />
        </div>
        <div class="col-md-2 d-flex align-items-end gap-2">
            <button type="submit" class="btn btn-primary w-100">🔎 Ara</button>
            <a class="btn btn-outline-secondary w-100" href="@Url.Action("Index", "ToplantiNotlari")">Temizle</a>
        </div>
    </form>

    <form asp-action="Create" method="post" class="row g-3 border p-3 rounded bg-light shadow-sm mb-4">
        <div class="col-md-3">
            <label class="form-label">Müşteri Adı</label>
            <input name="MusteriAdi" class="form-control" required />
        </div>
        <div class="col-md-5">
            <label class="form-label">Toplantı Notu</label>
            <textarea name="NotIcerigi" class="form-control" rows="1" required></textarea>
        </div>
        <div class="col-md-2">
            <label class="form-label">Ekleyen Kişi</label>
            <input name="EkleyenKisi" class="form-control" required />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">💾 Kaydet</button>
        </div>
    </form>

    <div class="accordion" id="notAccordion">
        @foreach (var not in Model)
        {
            string collapseId = $"collapse_{not.Id}";
            string headingId = $"heading_{not.Id}";
            <div class="accordion-item mb-2 shadow-sm border">
                <h2 class="accordion-header" id="@headingId">
                    <button class="accordion-button collapsed bg-light fw-semibold note-toggle"
                            type="button"
                            data-target="#@collapseId"
                            aria-expanded="false"
                            aria-controls="@collapseId">
                        <div class="d-flex flex-column">
                            <span>👤 <strong>@not.MusteriAdi</strong> — <span class="text-muted small">@not.EkleyenKisi</span></span>
                            <span class="small text-secondary">@not.Tarih.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                    </button>
                </h2>

                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId">
                    <div class="accordion-body bg-white">
                        <div class="mb-2 d-flex justify-content-between align-items-center">
                            <h6 class="text-primary m-0">📝 Toplantı Notu</h6>
                            <div class="btn-group">
                                <button class="btn btn-outline-primary btn-sm edit-btn" data-id="@not.Id">✏️ Düzenle</button>
                                <button class="btn btn-outline-success btn-sm" onclick="downloadNote(@not.Id, 'pdf')">📄 PDF</button>
                                <button class="btn btn-outline-info btn-sm" onclick="downloadNote(@not.Id, 'docx')">🧾 Word</button>
                                <button class="btn btn-outline-secondary btn-sm" onclick="downloadNote(@not.Id, 'txt')">📜 TXT</button>
                            </div>
                        </div>

                        <div class="editable-content border rounded p-3" contenteditable="false" data-id="@not.Id">
                            @Html.Raw(not.NotIcerigi?.Replace("\n", "<br/>"))
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).on('click', '.note-toggle', function () {
            const targetId = $(this).data('target');
            const target = $(targetId);
            const isOpen = target.hasClass('show');

            $('.accordion-collapse.show').each(function () {
                const collapse = bootstrap.Collapse.getOrCreateInstance(this);
                collapse.hide();
            });

            if (!isOpen) {
                const collapse = bootstrap.Collapse.getOrCreateInstance(target[0]);
                collapse.show();
            }
        });

        $(document).on('click', '.edit-btn', function () {
            const id = $(this).data('id');
            const editable = $(`.editable-content[data-id='${id}']`);
            const btn = $(this);

            if (editable.attr('contenteditable') === 'false') {
                editable.attr('contenteditable', 'true').addClass('border-primary');
                btn.text('💾 Kaydet');
            } else {
                const content = editable.html().trim();
                $.post('/ToplantiNotlari/UpdateContent', { id: id, notIcerigi: content }, function (res) {
                    if (res.success) {
                        editable.attr('contenteditable', 'false').removeClass('border-primary');
                        btn.text('✏️ Düzenle');
                    } else alert(res.message);
                });
            }
        });

        function downloadNote(id, format) {
            window.location.href = `/ToplantiNotlari/Download/${id}?format=${format}`;
        }
    </script>
}