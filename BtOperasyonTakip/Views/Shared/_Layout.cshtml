@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -Operasyon Takip</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
            background: linear-gradient(180deg, #f6f9ff, #eaf1ff);
            font-family: 'Segoe UI', Roboto, Arial, sans-serif;
            margin: 0;
        }

        main {
            flex: 1;
        }

    
        .navbar {
            background: linear-gradient(90deg, #007bff, #004bce);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.3px;
        }

        .nav-link {
            font-weight: 500;
            transition: 0.3s ease;
        }

            .nav-link:hover,
            .nav-link.active {
                color: #ffd700 !important;
            }

        .navbar-text small {
            color: #cdd9ff;
        }

       
        .card {
            border-radius: 1rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        table.dataTable thead {
            background-color: #e8f0ff;
            color: #003366;
            font-weight: 600;
        }

      
        footer.footer {
            background-color: #fff;
            font-size: 0.9rem;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.05);
            position: sticky;
            bottom: 0;
            width: 100%;
            z-index: 10;
        }

        .nav-profile {
            background-color: #ffffff1a;
            border-radius: 10px;
            padding: 6px 10px;
            color: #fff;
        }

        .dropdown-menu {
            border-radius: 10px;
        }

        .page-title {
            color: #0056d6;
            font-weight: 600;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
  
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            @{
                var brandController = "Auth";
                var brandAction = "Login";
                if (User?.Identity?.IsAuthenticated == true)
                {
                    if (User.IsInRole("Operasyon"))
                    {
                        brandController = "Dashboard";
                        brandAction = "Index";
                    }
                    else if (User.IsInRole("Saha"))
                    {
                        brandController = "Ticket";
                        brandAction = "Index";
                    }
                }
            }
            <a class="navbar-brand text-white" asp-controller="@brandController" asp-action="@brandAction">
                ⚙️ Operasyon Takip 
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User?.Identity?.IsAuthenticated != true)
                    {
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Auth" asp-action="Login">🔐 Giriş</a></li>
                    }
                    else if (User.IsInRole("Operasyon"))
                    {
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">🏠 Ana Sayfa</a></li>
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Musteri" ? "active" : "")" asp-controller="Musteri" asp-action="Index">📋 Müşteriler</a></li>
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "ToplantiNotlari" ? "active" : "")" asp-controller="ToplantiNotlari" asp-action="Index">🗒️ Toplantı Notları</a></li>
                        
                        //<li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Detay" ? "active" : "")" asp-controller="Detay" asp-action="Index">🗒️ Görüşme Detayları</a></li>
                        //<li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Jira" ? "active" : "")" asp-controller="Jira" asp-action="Index">🧾 Jira Görevleri</a></li>
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Takip" ? "active" : "")" asp-controller="Takip" asp-action="Index">🧾 İş Takip</a></li>
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Ticket" ? "active" : "")" asp-controller="Ticket" asp-action="Index">🧾 Ticketlar</a></li>
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Parametre" ? "active" : "")" asp-controller="Parametre" asp-action="Index">⚙️ Parametreler</a></li>
                        <!-- OPERASYON ROLÜ -->
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hatalar" ? "active" : "")" asp-controller="Hatalar" asp-action="Index">🚨 Hatalar</a></li>
                    }
                    else if (User.IsInRole("Saha"))
                    {
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Ticket" ? "active" : "")" asp-controller="Ticket" asp-action="Index">🧾 Ticketlar</a></li>
                        <!-- SAHA ROLÜ -->
                        <li><a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Hatalar" ? "active" : "")" asp-controller="Hatalar" asp-action="Index">🚨 Hatalar</a></li>
                    }
                </ul>

                <div class="dropdown">
                    <a class="nav-profile d-flex align-items-center text-decoration-none dropdown-toggle" href="#" id="profileDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>@(User?.Identity?.Name ?? "Kullanıcı")</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-muted py-3 border-top">
        <div class="container-fluid d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year - Operasyon Takip Sistemi</span>
            <span class="text-secondary">v1.0.5</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
