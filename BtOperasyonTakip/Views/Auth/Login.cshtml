@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #0056d6, #00b3ff);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
        color: #333;
    }

    .login-card {
        background: #ffffff;
        border-radius: 1rem;
        padding: 2.5rem 3rem;
        width: 400px;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.8s ease-in-out;
    }

        .login-card h3 {
            font-weight: 700;
            color: #0056d6;
        }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        color: #000 !important;
        background-color: #fff !important;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0, 123, 255, 0.3);
        }

    label.form-label {
        font-weight: 600;
        color: #333;
    }

    .form-check-label {
        color: #333;
    }

    .btn-login {
        background-color: #0056d6;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .btn-login:hover {
            background-color: #0042a3;
            transform: translateY(-2px);
        }

    .alert {
        border-radius: 8px;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="login-card text-center">
    <h3 class="mb-2">🔐 Operasyon Takip</h3>
    <p class="text-muted">Lütfen giriş yapın</p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post">
        <div class="mb-3 text-start">
            <label class="form-label">Kullanıcı Adı</label>
            <input type="text" name="username" class="form-control" placeholder="örn. furkan" required />
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Şifre</label>
            <input type="password" name="password" class="form-control" placeholder="••••••••" required />
        </div>

        <div class="form-check text-start mb-3">
            <input type="checkbox" name="rememberMe" class="form-check-input" id="remember">
            <label class="form-check-label" for="remember">Beni Hatırla</label>
        </div>

        <button type="submit" class="btn btn-login w-100 text-white py-2">Giriş Yap</button>
    </form>

    <div class="mt-3">
        <a asp-action="Register" class="text-decoration-none text-primary fw-semibold">Hesabın yok mu? Kayıt ol</a>
    </div>
</div>
